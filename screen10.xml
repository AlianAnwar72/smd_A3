<?xml version="1.0" encoding="utf-8"?><LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="20">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#7FB3D5"
        android:orientation="vertical"
        android:layout_weight="10">

    <Button
        android:id="@+id/leftarrowButton"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_gravity="start"
        android:background="@drawable/baseline_arrow_back_24"
        android:layout_marginStart="25sp"
        android:layout_marginTop="20sp"
        android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="220sp"
                android:layout_height="wrap_content"
                android:layout_marginStart="30sp"
                android:layout_marginTop="12sp"
                android:text="Hi, I’m
        John Cooper"
                android:textColor="#FFFFFF"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_gravity="start">
            </TextView>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_p1_round"
                android:scaleType="centerCrop"
                android:layout_gravity="start"/>
        </LinearLayout>
        <View
            android:id="@+id/horizontalLine1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/white"
            android:layout_marginTop="8sp"
            android:layout_marginBottom="10sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="30sp"
                android:layout_marginTop="15sp"
                android:text="UX Designer at
        Google"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold">
            </TextView>
            <TextView
                android:layout_width="190sp"
                android:layout_height="wrap_content"
                android:text="★"
                android:textSize="24sp"
                android:gravity="end"
                android:textColor="#FFD700" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.8"
                android:textSize="20sp"
                android:gravity="end"
                android:textColor="#FFFFFF" />
            </LinearLayout>
    <View
        android:id="@+id/horizontalLine2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/white"
        />
    <TextView
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:text="About me"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold">
    </TextView>
    <TextView
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginStart="30sp"
        android:layout_marginTop="10sp"
        android:layout_marginEnd="30sp"
        android:text="I am a passionate UX designer at Google with a focus on
creating user-centric and intuitive interfaces. With 10 years of
experience, I have had the opportunity to work on diverse
projects that have shaped my understanding of design
principles and user experience."
        android:textColor="#FFFFFF"
        android:textSize="11sp"
        android:textStyle="bold">
    </TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D1F2EB"
        android:orientation="vertical"
        android:layout_weight="10">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginTop="20sp"
            android:text="My Expertise Include"
            android:textColor="#2471A3"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="start">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140sp"
                android:layout_height="30sp"
                android:layout_marginStart="45sp"
                android:layout_marginTop="35sp"
                android:text="Career Advice"
                android:textColor="#FFFFFF"
                android:background="#3498DB"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="180sp"
                android:layout_height="30sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="35sp"
                android:text="User Experience Design"
                android:textColor="#FFFFFF"
                android:background="#3498DB"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="140sp"
                android:layout_height="30sp"
                android:layout_marginStart="45sp"
                android:layout_marginTop="30sp"
                android:text="Leadership"
                android:textColor="#FFFFFF"
                android:background="#3498DB"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center">
            </TextView>
            <TextView
                android:layout_width="140sp"
                android:layout_height="30sp"
                android:layout_marginStart="15sp"
                android:layout_marginTop="30sp"
                android:text="Prototyping"
                android:textColor="#FFFFFF"
                android:background="#3498DB"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center">
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30sp">
        <Button
            android:id="@+id/Button1"
            android:layout_width="170sp"
            android:layout_height="wrap_content"
            android:layout_marginStart="35sp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#F4D03F"
            android:textAllCaps="false"
            android:text="Drop a Review"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp" />
            <Button
                android:id="@+id/Button2"
                android:layout_width="170sp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30sp"
                android:backgroundTint="#F4D03F"
                android:textAllCaps="false"
                android:text="Join Community"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>
    <Button
        android:id="@+id/Button3"
        android:layout_width="180sp"
        android:layout_height="60sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#2980B9"
        android:textAllCaps="false"
        android:text="Book a Session"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>