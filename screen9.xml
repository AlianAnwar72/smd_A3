<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:background="#D1F2EB"
    tools:context=".MainActivity">

        <Button
            android:id="@+id/arrowbackButton"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_gravity="start"
            android:background="@drawable/baseline_arrow_back_24"
            android:backgroundTint="#000000"
            android:layout_marginStart="25sp"
            android:layout_marginTop="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginTop="8sp"
            android:text="Search Results"
            android:textColor="#2980B9"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_gravity="start">
        </TextView>
    <Spinner
        android:id="@+id/filterSpinner"
        android:layout_width="120sp"
        android:layout_height="25sp"
        android:layout_margin="16dp"
        android:layout_marginEnd="200sp"
        android:layout_marginTop="40sp"
        android:entries="@array/filter_options"
        android:prompt="@string/select_filter"
        android:background="#000000"
        android:backgroundTint="#2980B9"
        android:layout_gravity="end" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_p1_1"
            android:scaleType="centerCrop"
            android:layout_gravity="start"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="8sp"
                    android:text="Sample 1"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="3sp"
                    android:text="Lead-Technology Officer"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_gravity="bottom">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="20sp"
                    android:text="Available"
                    android:textColor="#2ECC71"
                    android:textSize="12sp"
                    android:layout_gravity="bottom">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@mipmap/ic_p2_1"
                android:scaleType="centerCrop"
                android:layout_gravity="start"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="25sp"
                        android:layout_marginStart="30sp"
                        android:layout_marginTop="8sp"
                        android:text="Sample 2"
                        android:textColor="#000000"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_gravity="bottom">
                    </TextView>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="20sp"
                        android:layout_marginStart="30sp"
                        android:layout_marginTop="3sp"
                        android:text="Lead-Technology Officer"
                        android:textColor="#000000"
                        android:textSize="12sp"
                        android:layout_gravity="bottom">
                    </TextView>
                    <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="20sp"
                    android:text="Not available"
                    android:textColor="#424949"
                    android:textSize="12sp"
                    android:layout_gravity="bottom">
                </TextView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_p3_foreground"
            android:scaleType="centerCrop"
            android:layout_gravity="start"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="8sp"
                    android:text="Sample 3"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="3sp"
                    android:text="Lead-Technology Officer"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_gravity="bottom">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="20sp"
                    android:text="Not available"
                    android:textColor="#424949"
                    android:textSize="12sp"
                    android:layout_gravity="bottom">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_p4_foreground"
            android:scaleType="centerCrop"
            android:layout_gravity="start"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="8sp"
                    android:text="Sample 4"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_gravity="bottom">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="3sp"
                    android:text="Lead-Technology Officer"
                    android:textColor="#000000"
                    android:textSize="12sp"
                    android:layout_gravity="bottom">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20sp"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="3sp"
                    android:layout_marginBottom="20sp"
                    android:text="Available"
                    android:textColor="#2ECC71"
                    android:textSize="12sp"
                    android:layout_gravity="bottom">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#2980B9"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:layout_marginTop="33sp">

            <Button
                android:id="@+id/homeButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="25sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/baseline_add_home_24" />
            <Button
                android:id="@+id/searchButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="40sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/baseline_content_paste_search_24" />
            <Button
                android:id="@+id/plusButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="40sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/baseline_add_circle_24" />
            <Button
                android:id="@+id/chatButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="40sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/baseline_add_comment_24" />

            <Button
                android:id="@+id/profileButton"
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:layout_marginStart="40sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/baseline_account_circle_24" />
        </LinearLayout>
</LinearLayout>